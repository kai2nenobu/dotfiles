escape ^L^L
defbce "on"
term xterm-256color

# less 終了時とかに元の画面に戻す
altscreen on

# bufferfile を変更
bufferfile "${HOME}/.screen-exchange"
# コピーした文字をクリップボードに送る
bindkey -m ' ' eval 'msgwait 0' 'stuff \040' writebuf 'exec !!! xclip -selection clipboard ${HOME}/.screen-exchange' 'msgwait 0'
bindkey -m Y eval 'msgwait 0' 'stuff Y' writebuf 'exec !!! xclip -selection clipboard ${HOME}/.screen-exchange' 'msgwait 0'
bindkey -m y eval 'msgwait 0' 'stuff y' writebuf 'exec !!! xclip -selection clipboard ${HOME}/.screen-exchange' 'msgwait 0'
bindkey -m W eval 'msgwait 0' 'stuff W' writebuf 'exec !!! xclip -selection clipboard ${HOME}/.screen-exchange' 'msgwait 0'

## backtick
## コマンドの結果を変数として盛り込める
backtick 1 0 0 whoami
#backtick 2 10 10 $HOME/Dropbox/bin/CPU_USE.sh

# hardstatus を常に表示
hardstatus alwayslastline
#hardstatus string '%{= kG}[ %{Y}%1`@%H %{G}][%=%{= w}%?%-Lw%?%{C}%n*%f%t%?(%u)%?%{w}%?%+Lw%?%=%{G}][ %{r}%2`%%%{G} ][ %{B}%Y-%m-%d %{W}%02c %{G}]'
hardstatus string '%{= kG}[ %{Y}%1`@%H %{G}][%=%{= w}%?%-Lw%?%{C}%n*%f%t%?(%u)%?%{w}%?%+Lw%?%=%{G}][ %{B}%Y-%m-%d %{W}%02c %{G}]'

