// 既定値を上書きするには、このファイル内にキー バインドを挿入します
[
    {
        "key": "Ctrl+q Ctrl+q",
        "command": "workbench.action.quickOpenView",
        "when": "editorTextFocus"
    },
    {
        "key": "Ctrl+q Ctrl+t",
        "command": "editor.action.toggleWordWrap",
        "when": "editorTextFocus"
    },
    {
        "key": "Ctrl+q Ctrl+h",
        "command": "editor.action.showHover",
        "when": "editorTextFocus"
    },
    {
        "key": "Ctrl+q Ctrl+i",
        "command": "editor.action.triggerSuggest",
        "when": "editorTextFocus"
    },
    {
        // 統合ターミナルで Ctrl+x を使えるようにする
        "key": "Ctrl+x",
        "command": "Ctrl+x",
        "when": "terminalFocus"
    },
    {
        // 統合ターミナルで Ctrl+k を使えるようにする
        "key": "Ctrl+k",
        "command": "Ctrl+k",
        "when": "terminalFocus"
    }
]
