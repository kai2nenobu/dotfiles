{
  // タイトルバーとメニューバーを統合する
  "window.titleBarStyle": "custom",
  // 最近開いたフォルダーを新しいウィンドウで開く
  "window.openFoldersInNewWindow": "on",
  // Python仮想環境のパス
  "python.venvPath": ".venv",
  // ファイル自動保存設定
  "files.autoSave": "afterDelay",
  "editor.formatOnSave": false, // 保存時の自動フォーマット
  "files.insertFinalNewline": true, // ファイル末尾を常に改行する
  // ファイルを自動保存する遅延時間（ミリ秒）
  "files.autoSaveDelay": 500,
  "editor.fontSize": 15,
  "editor.renderWhitespace": "boundary",
  "editor.fontFamily": "'HackGen Console NF', HackGenNerd, Consolas, 'Courier New', monospace",
  "editor.mouseWheelZoom": true,
  "zenMode.hideLineNumbers": false,
  /* デフォルト言語をmarkdownにする */
  "files.defaultLanguage": "markdown",
  "files.associations": {
    "*.tmp": "markdown",
    "*.txt": "markdown"
  },
  /* Git */
  "git.showCommitInput": false,
  /* Code Spell Checker */
  "cSpell.userWords": [
    "amazonlinux",
    "autouse",
    "boto",
    "buildspec",
    "Dockle",
    "dtype",
    "excinfo",
    "grafana",
    "hadolint",
    "mkdir",
    "pytest",
    "Referer",
    "statemachine",
    "stepfunctions",
    "traceroute",
    "trivy"
  ],
  "[shellscript]": {
    "editor.tabSize": 2
  },
  "[terraform]": {
    "editor.tabSize": 2
  },
  "[git-commit]": {
    "editor.rulers": [80]
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[yaml]": {
    "editor.rulers": [120]
  },
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  },
  /* Color Highlight */
  "color-highlight.markerType": "dot-before",
  "yaml.customTags": [
    "!Ref",
    "!Sub scalar",
    "!Sub sequence",
    "!Join sequence",
    "!FindInMap sequence",
    "!GetAtt scalar",
    "!GetAtt sequence",
    "!Base64 mapping",
    "!GetAZs",
    "!Select scalar",
    "!Select sequence",
    "!Split sequence",
    "!ImportValue",
    "!Condition",
    "!Equals sequence",
    "!And",
    "!If",
    "!Not",
    "!Or",
    "!And sequence",
    "!If sequence",
    "!Not sequence",
    "!Equals",
    "!Or sequence",
    "!FindInMap",
    "!Base64",
    "!Join",
    "!Cidr",
    "!Sub",
    "!GetAtt",
    "!ImportValue sequence",
    "!Select",
    "!Split"
  ],
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.profiles.linux": {
    "bash": {
      "path": "bash",
      "args": [
        "-l" // ログインシェルにする
      ]
    }
  },
  "terminal.integrated.fontFamily": "'PlemolJP Console NF', 'HackGen Console NF', 'HackGenNerd Console'",
  // 統合ターミナルにPowerShell Coreを使用する
  "terminal.integrated.defaultProfile.windows": "PowerShell Core",
  "terminal.integrated.profiles.windows": {
    "PowerShell Core": {
      "path": [
        "C:\\Program Files\\PowerShell\\7\\pwsh.exe"
      ]
    }
  },
  // Remote Development
  "remote.SSH.defaultExtensions": [
    "ms-ceintl.vscode-language-pack-ja", // Japanese Language Pack for Visual Studio Code
    "eamodio.gitlens", // GitLens
    "ms-azuretools.vscode-docker", // Docker
    "streetsidesoftware.code-spell-checker" // Code Spell Checker
  ],
  "remote.containers.defaultExtensions": [
    "ms-ceintl.vscode-language-pack-ja", // Japanese Language Pack for Visual Studio Code
    "eamodio.gitlens", // GitLens
    "ms-azuretools.vscode-docker", // Docker
    "streetsidesoftware.code-spell-checker" // Code Spell Checker
  ],
  "remote.WSL.defaultExtensions": [
    // 2020-02-14 時点でこんな設定はないようだ
  ],
  // GitHub Codespaces
  "github.codespaces.defaultExtensions": [
    "GitHub.codespaces",
    "GitHub.vscode-pull-request-github",
    "ms-ceintl.vscode-language-pack-ja", // Japanese Language Pack for Visual Studio Code
    "eamodio.gitlens", // GitLens
    "streetsidesoftware.code-spell-checker" // Code Spell Checker
  ],
  // Markdown heading color
  // https://stackoverflow.com/a/66781629
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "heading.1.markdown entity.name.section.markdown, heading.1.markdown punctuation.definition.heading.markdown",
        "settings": {
          "foreground": "#87cefa",
          "fontStyle": "bold",
        }
      },
      // {
      //   "scope": "heading.2.markdown entity.name.section.markdown, heading.2.markdown punctuation.definition.heading.markdown",
      //   "settings": {
      //     "foreground": "#fafad2",
      //   }
      // },
      {
        "scope": "heading.3.markdown entity.name.section.markdown, heading.3.markdown punctuation.definition.heading.markdown",
        "settings": {
          "foreground": "#00ffff",
        }
      },
      {
        "scope": "heading.4.markdown entity.name.section.markdown, heading.4.markdown punctuation.definition.heading.markdown",
        "settings": {
          "foreground": "#ff7f24",
        }
      }
    ]
  },
  /* Markdown Paste (telesoho.vscode-markdown-paste-image) */
  "MarkdownPaste.path": "./images",
  "MarkdownPaste.namePrefix": "image-",
  /* Prettier */
  "prettier.printWidth": 120,
  "git.autofetch": true,
  "git.confirmSync": false
}
