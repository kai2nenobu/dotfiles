{
  "rules": {
    // 日本語技術文書向けプリセット
    "preset-ja-technical-writing": {
      // 文の長さを制限しない
      "sentence-length": {
        "max": 120,
        "severity": "warning"
      },
      "no-exclamation-question-mark": false
    },
    // 日本語文書の空白ルールプリセット
    "preset-ja-spacing": {
      "ja-space-around-code": {
        "before": false,
        "after": false
      },
      "ja-space-after-question": false,
      "ja-space-after-exclamation": false
    },
    // 辞書による表記揺れチェック
    "prh": {
      "rulePaths": [
        "./.prh.yml"
      ]
    }
  },
  "filters": {
    "comments": true
  }
}
